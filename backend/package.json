    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.12.12",
    "prisma": "^5.22.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
